generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // A user can have many transactions
  transactions Transaction[]
}

model Transaction {
  id          String   @id @default(cuid())
  amount      Float // Use Float for currency values (e.g., 19.99)
  description String
  date        DateTime
  category    String
  type        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Links to the user who made the transaction
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Links to the category of the transaction
}
